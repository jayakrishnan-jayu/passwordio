<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="16dp"
    tools:context=".MainActivity">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:passwordToggleTint="@color/blue"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/aCrEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:inputType="text"
            android:layout_marginBottom="12dp"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/blue"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/aCrPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Master Password"
            android:inputType="textPassword"
            android:layout_marginBottom="12dp"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="12dp"
        android:text="@string/master_password_warning"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/blue"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/aCrRePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Re-type Master Password"
            android:inputType="textPassword"
            android:layout_marginBottom="12dp"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:id="@+id/aCrSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        style="@style/buttonPrimary"
        android:text="Create"
        />

</LinearLayout>