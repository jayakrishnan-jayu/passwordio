<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/grey</item>
        <item name="colorAccent">@color/black</item>
    </style>
    <style name="buttonPrimary">
        <item name="android:textColor">#ffffff</item>
    </style>
    <style name="buttonSecondary">
        <item name="android:textColor">#ffffff</item>
        <item name="android:backgroundTint">@color/grey</item>
    </style>
    <style name="logoText">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">33sp</item>
        <item name="android:textFontWeight">6600</item>
    </style>
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>
    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/blue</item>
        <item name="colorSwitchThumbNormal">#f1f1f1</item>
        <item name="android:colorForeground">@color/grey</item>
    </style>
</resources>